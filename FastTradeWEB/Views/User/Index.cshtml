@model IEnumerable<FastTradeWEB.Models.KindVM>

@{
    ViewBag.Title = "FastTrade.com";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

@Html.Action("GetTags", "User")
<br />
<div class="row">
    <div class="col-lg-2 col-md-3 col-sm-4 col-xs-4">
        @Html.Action("Menu", "Nav")
    </div>

    <div class=" col-lg-10 col-md-9 col-sm-8 col-xs-8">
        <div>
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                    <div class="btn-group" id="nav_kind" data-toggle="buttons">
                        <label class="btn btn-info active" id="filter_kind" data-kind-id="-1">
                            <input type="radio" name="options" autocomplete="off" checked> Все типы
                        </label>
                        @foreach (var kind in Model)
                        {
                            <label class="btn btn-info" id="@kind.Name" data-kind-id="@kind.KindId">
                                <input type="radio" name="options" autocomplete="off"> @kind.Name
                            </label>
                        }
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3" id="mySelect">
                    <select class="selectpicker" data-style="btn-info" id="filter_region">
                        <option data-id-region="-1">Вся Беларусь</option>
                        @for (int i = 0; i < ViewBag.Regions.Length; i++)
                        {
                            <option data-id-region="@ViewBag.Ids[i]">@ViewBag.Regions[i]</option>
                        }
                    </select>
                </div>
            </div>
            <div>
                <br />
                @Html.Action("GetAds")
            </div>
        </div>
    </div>
</div>
